                constellationData = jsonData;
                renderConstellations();
            } catch (error) {
                console.error('Error loading constellation data:', error);
                document.getElementById('constellationsGrid').innerHTML = '<div class="loading">L·ªói khi t·∫£i d·ªØ li·ªáu ch√≤m sao.</div>';
            }
